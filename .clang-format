Language: Cpp
BasedOnStyle: LLVM
IndentWidth: 4
UseTab: Never
ColumnLimit: 100
BreakBeforeBraces: Custom
BraceWrapping:
    AfterFunction: true
    AfterStruct: true
    AfterClass: true
    AfterNamespace: true
    BeforeElse: true
    AfterControlStatement: true
AccessModifierOffset: '-2'
SpacesInParentheses: true
SpaceInEmptyParentheses: false
Standard: Cpp11
BreakConstructorInitializers: BeforeComma
